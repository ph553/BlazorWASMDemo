@using System.Globalization
<RadzenChart Style="height:100px; width:100%, padding: 0;">
    <RadzenColumnSeries Data="@Shipments2021" CategoryProperty="Category" Title="2020" ValueProperty="Value">
    </RadzenColumnSeries>
    <RadzenColumnSeries Data="@Shipments2021" CategoryProperty="Category" Title="2019" ValueProperty="Value">
    </RadzenColumnSeries>
    <RadzenColumnSeries Data="@Shipments2021" Fill="white" CategoryProperty="Category" Title="2019" ValueProperty="Value">
    </RadzenColumnSeries>
    <RadzenLegend Position="LegendPosition.Bottom" />
    <RadzenValueAxis FormatString="{0:C}" Visible="false" />
    <RadzenCategoryAxis FormatString="{0:C}" Visible="false" />

    <RadzenColumnOptions Radius="0" Margin="1" />
</RadzenChart>
@code {
    [Parameter]
    public RadzenChartData[] Shipments2022 { get; set; }

    [Parameter]
    public RadzenChartData[] Shipments2021 { get; set; }
}