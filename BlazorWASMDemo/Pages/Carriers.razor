@inject IJSRuntime JSRuntime

<div class="row text-center py-3 pe-0">
    <div class="col px-0" style="height:85px">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex flex-row">
                    <span class="text-start fw-bold text-muted m-3 pe-5">Explore</span>
                    <div class="btn-group w-50 m-1">
                        <button href="#" class="btn active" aria-current="page">KPIs</button>
                        <button href="#" class="btn">Trailers</button>
                        <button href="#" class="btn">Error Logs</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row text-center pt-3 pe-0">
    <div class="col ps-0">
        <div class="card p-3 h-100" style="height:248px">
            <div class="card-title px-3 d-flex">
                <h6 class="fw-bold">Check-in rate this month</h6>
            </div>
            <div class="card-body pt-0">
                <div class="row justify-content-between"><span class="text-start text-info w-50">44 Trucks</span><span class="text-end w-50">58 Trucks</span></div>
                <div class="row justify-content-between pb-4"><span class="text-start w-50">Checked-in</span><span class="text-end w-50">Scheduled</span></div>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-label="Basic example" style="width: 67%" aria-valuenow="67" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-between">
                    <span class="text-start w-50 px-0">
                        <span class="text-success">
                            <svg class="bi mx-0" width="32" height="32" fill="green">
                                <use href="icons/bootstrap-icons.svg#arrow-up-short"></use>
                            </svg>21%
                        </span> From yesterday
                    </span><span class="text-end w-50">67%</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card p-3 h-100" style="height:248px">
            <div class="card-title px-3 d-flex">
                <h6 class="fw-bold">Close rate this month</h6>
            </div>
            <div class="card-body pt-0">
                <div class="row justify-content-between"><span class="text-start text-info w-50">44 Trucks</span><span class="text-end w-50">58 Trucks</span></div>
                <div class="row justify-content-between pb-4"><span class="text-start w-50">Closed</span><span class="text-end w-50">Checked-in</span></div>
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" aria-label="Basic example" style="width: 67%" aria-valuenow="67" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-between">
                    <span class="text-start w-50 px-0">
                        <span class="text-success">
                            <svg class="bi mx-0" width="32" height="32" fill="green">
                                <use href="icons/bootstrap-icons.svg#arrow-up-short"></use>
                            </svg>21%
                        </span> From yesterday
                    </span><span class="text-end w-50">67%</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col pe-0">
        <div class="card p-3 h-100" style="height:248px">
            <div class="card-title px-3 d-flex justify-content-between align-items-center">
                <h6 class="fw-bold">Total scheduled this month</h6>

                <h4>58 Trucks</h4>
            </div>
            <div class="card-body" data-bs-spy="scroll"data-bs-root-margin="0px 0px -40%" data-bs-smooth-scroll="true">
                <p class="card-text text-start fs-6 mb-0">Closed</p>
                <p class="card-text text-start text-success"><span class="fs-4">43</span></p>
                <p class="card-text text-start fs-6 mb-0">No Check-In Attempted by Driver</p>
                <p class="card-text text-start text-danger"><span class="fs-4">14</span></p>
            </div>
        </div>
    </div>
</div>

<div class="row text-center pt-3 pe-0">
    <div class="col px-0">
        <div class="p-0">
            <div class="pt-4 pb-2 px-0 d-flex justify-content-between align-items-center">
                <h6 class="fw-bold">Shipments by carrier</h6>
            </div>
            <div class="ps-3 col-11">
                <RadzenColumnChart LiftableInventory="columnChartData1" Step="10" Width="70" IsValueGridVisible="true" />
            </div>
        </div>
    </div>
</div>

@code {

    RadzenChartData[] columnChartData1 = new RadzenChartData[] {
        new RadzenChartData
        {
            Category = "Luxembourg",
            Value = 51
        },
        new RadzenChartData
        {
            Category = "Trareysa",
            Value = 35
        },
        new RadzenChartData
        {
            Category = "STN",
            Value = 21
        },
        new RadzenChartData
        {
            Category = "Coastal",
            Value = 15
        },
        new RadzenChartData
        {
            Category = "Marvic",
            Value = 14
        },
        new RadzenChartData
        {
            Category = "San Maria",
            Value = 12
        },

    }.OrderByDescending(t => t.Value).ToArray();    

}

<style>
    .invis {
        visibility: hidden;
    }

    .noDot {
        list-style-type: none;
    }

    .btn {
        background-color: rgb(238,240,241);
        color: black;
        height: 40px;
        border-radius: 0px
    }

    .btn.active {
            background-color: rgb(13,146,236);
    }
</style>
